<UserControl x:Class="E_Fame_Watch.GraphLoadingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:E_Fame_Watch"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200" Loaded="UserControl_Loaded" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
    <Grid x:Name="LoadingCanvas" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        
        <Rectangle x:Name="LoadingBackgroundRectangle" Fill="Black" Opacity="0.5"/>

        <Rectangle x:Name="LoadingRectangle" Width="100" Height="20" Fill="Blue" Canvas.Left="10" Canvas.Top="39" RadiusY="10" RadiusX="10"/>

    </Grid>
</UserControl>
